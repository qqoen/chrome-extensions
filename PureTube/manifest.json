{
  "manifest_version": 2,
  "name": "PureTube",
  "version": "0.1.0",

  "description": "Boost your productivity on YouTube",
  "icons": {
    "16": "images/logo16.png",
    "48": "images/logo48.png" ,
    "128": "images/logo128.png"
  },

  "permissions": ["activeTab"],
  "content_scripts": [{
    "js": [ "main.js" ],
    "matches": [
      "https://www.youtube.com/*"
    ]
  }]
}
